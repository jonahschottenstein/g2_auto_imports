datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Make {
  id     Int    @id @default(autoincrement())
  name   String
  models Model[]
}

model Model {
  id         Int         @id @default(autoincrement())
  name       String
  make       Make        @relation(fields: [makeId], references: [id])
  makeId     Int
  productions Production[]
}

model Production {
  id         Int    @id @default(autoincrement())
  production Int
  model      Model  @relation(fields: [modelId], references: [id])
  modelId    Int
}